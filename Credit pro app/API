# Python Example: Reading Entities
# Filterable fields: customer_name, phone_number, credit_amount, due_date, due_time, status, notes, last_contacted
import requests

def make_api_request(api_path, method='GET', data=None):
    url = f'https://app.base44.com/api/{api_path}'
    headers = {
        'api_key': '8ae60abf23bd4b8cabafd772df673e5a',
        'Content-Type': 'application/json'
    }
    if method.upper() == 'GET':
        response = requests.request(method, url, headers=headers, params=data)
    else:
        response = requests.request(method, url, headers=headers, json=data)
    response.raise_for_status()
    return response.json()

entities = make_api_request(f'apps/68e0a7d6bd66e7722fa0dd9b/entities/CreditCustomer')
print(entities)

# Python Example: Updating an Entity
# Filterable fields: customer_name, phone_number, credit_amount, due_date, due_time, status, notes, last_contacted
def update_entity(entity_id, update_data):
    response = requests.put(
        f'https://app.base44.com/api/apps/68e0a7d6bd66e7722fa0dd9b/entities/CreditCustomer/{entity_id}',
        headers={
            'api_key': '8ae60abf23bd4b8cabafd772df673e5a',
            'Content-Type': 'application/json'
        },
        json=update_data
    )
    response.raise_for_status()
    return response.json()